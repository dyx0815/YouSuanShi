<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.main.activity.MainActivity">
    <com.dan.yousuanshi.utils.CustomScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_tab"/>
    <com.yinglan.alphatabs.AlphaTabsIndicator
        android:id="@+id/bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white">
        <com.yinglan.alphatabs.AlphaTabView
            android:id="@+id/atv_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="7dp"
            android:paddingBottom="3dp"
            app:tabIconNormal="@mipmap/icon_chat_false"
            app:tabIconSelected="@mipmap/icon_chat"
            app:tabText="消息"
            app:tabTextSize="10sp"
            app:textColorNormal="@color/color_333333"
            app:textColorSelected="@color/color_F99E05"
            app:paddingTexwithIcon="8dp"/>
        <com.yinglan.alphatabs.AlphaTabView
            android:id="@+id/atv_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="7dp"
            android:paddingBottom="3dp"
            app:tabIconNormal="@mipmap/icon_shared_false"
            app:tabIconSelected="@mipmap/icon_shared"
            app:tabText="共享"
            app:tabTextSize="10sp"
            app:textColorNormal="@color/color_333333"
            app:textColorSelected="@color/color_F99E05"
            app:paddingTexwithIcon="8dp"/>
        <com.yinglan.alphatabs.AlphaTabView
            android:id="@+id/atv_address_book"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="7dp"
            android:paddingBottom="3dp"
            app:tabIconNormal="@mipmap/icon_address_book_false"
            app:tabIconSelected="@mipmap/icon_address_book"
            app:tabText="通讯录"
            app:tabTextSize="10sp"
            app:textColorNormal="@color/color_333333"
            app:textColorSelected="@color/color_F99E05"
            app:paddingTexwithIcon="8dp"/>
        <com.yinglan.alphatabs.AlphaTabView
            android:id="@+id/atv_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="7dp"
            android:paddingBottom="3dp"
            app:tabIconNormal="@mipmap/icon_mine_false"
            app:tabIconSelected="@mipmap/icon_mine"
            app:tabText="我的"
            app:tabTextSize="10sp"
            app:textColorNormal="@color/color_333333"
            app:textColorSelected="@color/color_F99E05"
            app:paddingTexwithIcon="8dp"/>
    </com.yinglan.alphatabs.AlphaTabsIndicator>
</RelativeLayout>