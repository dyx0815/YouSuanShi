<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="12dp"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/ll_part_purview"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingLeft="12dp"
            android:paddingRight="8dp">
            <ImageView
                android:id="@+id/iv_part_purview"
                android:layout_width="16dp"
                android:layout_height="50dp"
                android:src="@mipmap/icon_part_purview_add"
                android:scaleType="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_part_purview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="管理控制台"
            android:textSize="15sp"
            android:textColor="@color/color_333333"/>
        <Switch
            android:id="@+id/switch_part_purview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumb="@drawable/selector_switch_chat_thumb"
            android:track="@drawable/selector_switch_chat"
            android:checked="false"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="36dp"
        android:background="@color/color_F2F2F2"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</LinearLayout>