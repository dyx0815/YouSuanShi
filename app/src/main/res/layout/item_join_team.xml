<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/v_util"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_F8F8F8"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_head_icon"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ez"
        android:scaleType="fitXY"
        app:riv_oval="true"
        android:layout_below="@id/v_util"/>
    <TextView
        android:id="@+id/tv_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.5dp"
        android:layout_marginLeft="15.5dp"
        android:text="陕西东舟软件技术开发有限责任公司"
        android:textSize="15sp"
        android:textColor="@color/color_333333"
        android:maxEms="10"
        android:layout_alignTop="@id/riv_head_icon"
        android:layout_toRightOf="@id/riv_head_icon"/>
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="陕西-西安-未央"
        android:textSize="12sp"
        android:textColor="@color/color_999999"
        android:layout_alignLeft="@id/tv_team_name"
        android:layout_below="@id/tv_team_name"/>
    <TextView
        android:id="@+id/tv_industry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14.5dp"
        android:text="计算机软件"
        android:textSize="12sp"
        android:textColor="@color/color_999999"
        android:layout_alignTop="@id/tv_address"
        android:layout_toRightOf="@id/tv_address"/>
    <TextView
        android:id="@+id/tv_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30.5dp"
        android:layout_marginRight="22dp"
        android:paddingTop="8.5dp"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="申请加入"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_add_team_btn"
        android:layout_alignTop="@id/tv_team_name"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:id="@+id/iv_team_proof"
        android:layout_width="43dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/icon_team_proof"
        android:scaleType="fitXY"
        android:layout_alignLeft="@id/tv_address"
        android:layout_below="@id/tv_address"
        android:visibility="invisible"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="14.5dp"
        android:layout_below="@id/iv_team_proof"
        android:background="@color/white"/>
</RelativeLayout>