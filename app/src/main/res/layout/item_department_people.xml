<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <CheckBox
            android:id="@+id/cb_choose"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_choose_my_friend"
            android:button="@null"
            android:checked="false"
            android:visibility="gone"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_head_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ez"
            android:scaleType="fitXY"
            app:riv_oval="true"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.5dp"
            android:text="清风"
            android:textSize="14sp"
            android:textColor="@color/color_333333"/>
        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:paddingLeft="7.5dp"
            android:paddingRight="7.5dp"
            android:text="主管"
            android:textSize="10sp"
            android:textColor="@color/color_F99E05"
            android:background="@drawable/shape_send_announcement"
            android:visibility="gone"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/ll_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_department_people_update"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="9.5dp"
        android:layout_marginLeft="41.5dp"
        android:background="@color/color_F2F2F2"/>
</LinearLayout>