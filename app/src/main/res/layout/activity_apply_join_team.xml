<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.addressbook.activity.ApplyJoinTeamActivity"
    android:background="@color/white">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_apply_join_team_top_bg"
        android:scaleType="fitXY"/>
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="14dp"
            android:paddingRight="12dp"
            android:paddingBottom="14dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_apply_join_team_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="申请加入"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <!--提交申请-->
    <RelativeLayout
        android:id="@+id/rl_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="18.5dp"
        android:layout_marginBottom="100dp"
        android:paddingBottom="18dp"
        android:background="@mipmap/icon_apply_join_team_bg"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_below="@id/rl_title">
        <TextView
            android:id="@+id/tv_team_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36.5dp"
            android:text="陕西东舟软件科技有限责任开发公司"
            android:textSize="18sp"
            android:textColor="@color/color_333333"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_input_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="请填写以下信息"
            android:textSize="15sp"
            android:textColor="@color/color_999999"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_team_name"
            android:gravity="center_horizontal"/>
        <LinearLayout
            android:id="@+id/ll_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45.5dp"
            android:layout_below="@id/tv_input_info_title"
            android:layout_above="@id/tv_submit">
            <include layout="@layout/layout_apply_join_team"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25.5dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="63.5dp"
            android:paddingTop="13.5dp"
            android:paddingBottom="13.5dp"
            android:text="提交申请"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/shape_add_team_btn"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <!--提交成功-->
    <RelativeLayout
        android:id="@+id/rl_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="18.5dp"
        android:background="@mipmap/icon_apply_join_team_success_bg"
        android:layout_below="@id/rl_title"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_success_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="82.5dp"
            android:src="@mipmap/icon_apply_join_team_success_icon"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tv_success_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="提交成功"
            android:textSize="18sp"
            android:textColor="@color/color_333333"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_success_icon"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_success_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19.5dp"
            android:text="等待管理员审核"
            android:textSize="14sp"
            android:textColor="@color/color_999999"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_success_title"/>
        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="101dp"
            android:paddingTop="13dp"
            android:paddingBottom="13.5dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="39dp"
            android:text="确定"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_below="@id/tv_success_title2"
            android:background="@drawable/shape_add_team_btn"/>
    </RelativeLayout>
    <!--二维码-->
    <RelativeLayout
        android:id="@+id/rl_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="18.5dp"
        android:paddingBottom="18dp"
        android:background="@mipmap/icon_apply_join_team_scan"
        android:layout_below="@id/rl_title"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_scan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72.5dp"
            android:text="请同事扫下方二维码"
            android:textSize="15sp"
            android:textColor="@color/color_333333"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tv_join_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="邀请进入企业/组织"
            android:textSize="19dp"
            android:textColor="@color/color_333333"
            android:layout_below="@id/tv_scan_title"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_apply_join_team_scan"
            android:layout_marginTop="90.5dp"
            android:layout_marginBottom="55dp"
            android:padding="4.5dp"
            android:layout_below="@id/tv_join_title"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/iv_scan"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@mipmap/ez"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/rl_is_team_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="18.5dp"
        android:paddingBottom="18dp"
        android:background="@mipmap/icon_apply_join_team_scan"
        android:layout_below="@id/rl_title"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="您已在该企业中"
            android:textSize="19sp"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_return_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="13dp"
            android:paddingBottom="13.5dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="25dp"
            android:text="返回主页"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/shape_add_team_btn"/>
    </LinearLayout>
</RelativeLayout>