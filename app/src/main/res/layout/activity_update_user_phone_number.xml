<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.mine.activity.UpdateUserPhoneNumberActivity"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="14dp"
            android:paddingRight="12dp"
            android:paddingBottom="14dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改手机号"
            android:textColor="@color/color_333333"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="37dp"
        android:text="请输入新手机号"
        android:textSize="17sp"
        android:textColor="@color/color_333333"
        android:layout_below="@id/rl_title"/>
    <LinearLayout
        android:id="@+id/ll_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="38dp"
        android:layout_marginTop="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/tv_title"
        android:layout_alignLeft="@id/tv_title">
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:textColor="@color/color_333333"
            android:hint="请输入新手机号"
            android:background="@color/transparent"
            android:inputType="textPassword"
            android:maxLength="18"
            android:textCursorDrawable="@drawable/shape_edit_text_cursor"/>
        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="13dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_clear"
            android:visibility="gone"/>
    </LinearLayout>
    <View
        android:id="@+id/v_util"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_999999"
        android:layout_below="@id/ll_pwd"
        android:layout_alignLeft="@id/ll_pwd"
        android:layout_alignRight="@id/ll_pwd"/>
    <Button
        android:id="@+id/btn_get_code"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="45dp"
        android:text="获取验证码"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_alignLeft="@id/ll_pwd"
        android:layout_alignRight="@id/ll_pwd"
        android:layout_below="@id/v_util"
        android:background="@drawable/shape_mine_update_phone"/>
</RelativeLayout>