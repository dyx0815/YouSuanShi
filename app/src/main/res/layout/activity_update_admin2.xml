<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.addressbook.activity.UpdateAdmin2Activity"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="14dp"
            android:paddingRight="12dp"
            android:paddingBottom="14dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="更换管理员"
            android:textColor="@color/color_333333"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/ll_back"
            android:background="@color/color_D5D5D5" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_update_admin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:paddingRight="12dp"
            android:text="新管理员验证"
            android:textSize="12sp"
            android:textColor="@color/color_F99E05"
            android:background="@color/color_F8F8F8"/>
        <LinearLayout
            android:id="@+id/ll_new_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="11.5dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.5dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:text="新主管理员"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_new_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@color/transparent"
                android:text="请选择联系人"
                android:textColor="@color/color_999999"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="5.5dp"
                android:layout_height="10dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_mine_my_info_right" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_F2F2F2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="18.5dp"
            android:paddingBottom="18dp"
            android:paddingRight="12dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="姓名"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.5dp"
                android:layout_weight="9"
                android:hint="选择人员后自动生成"
                android:textSize="13sp"
                android:background="@color/transparent"
                android:enabled="false"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_F2F2F2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="18.5dp"
            android:paddingBottom="18dp"
            android:paddingRight="12dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="手机号"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.5dp"
                android:layout_weight="9"
                android:hint="选择人员后手机号自动生成"
                android:textSize="13sp"
                android:background="@color/transparent"
                android:enabled="false"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_F2F2F2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="验证码"
                android:textSize="14sp"
                android:textColor="@color/color_333333"/>
            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.5dp"
                android:layout_weight="9"
                android:hint="请输入验证码"
                android:textSize="13sp"
                android:background="@color/transparent"
                android:textCursorDrawable="@drawable/shape_edit_text_cursor"
                android:maxLength="4"
                android:inputType="number"/>
            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="18.5dp"
                android:paddingBottom="18dp"
                android:text="获取验证码"
                android:textSize="13sp"
                android:textColor="@color/color_F99E05"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_F8F8F8"/>
    </LinearLayout>
    <!--更换成功-->
    <LinearLayout
        android:id="@+id/ll_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_update_admin_success"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.5dp"
            android:text="主管理员更换成功"
            android:textSize="14sp"
            android:textColor="@color/color_F99E05"/>
        <TextView
            android:id="@+id/tv_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="53.5dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingLeft="91.5dp"
            android:paddingRight="91.5dp"
            android:text="完成"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_switch_chat_open"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>