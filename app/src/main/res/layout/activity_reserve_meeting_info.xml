<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.chat.activity.ReserveMeetingInfoActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="14dp"
            android:paddingRight="12dp"
            android:paddingBottom="14dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="预约会议"
            android:textColor="@color/color_333333"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/ll_back"
            android:background="@color/color_D5D5D5" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_F8F8F8"/>
    <LinearLayout
        android:id="@+id/ll_add_meeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10.5dp"
        android:paddingBottom="31dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView
            android:id="@+id/tv_meeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加日程、会议、活动等"
            android:textSize="14sp"
            android:textColor="@color/color_999999"
            android:drawableLeft="@mipmap/icon_meeting"
            android:drawablePadding="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_F8F8F8"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="12dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10月02日 7：00"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:drawableLeft="@mipmap/icon_meeting_time"
            android:drawablePadding="10dp"/>
        <View
            android:layout_width="1.5dp"
            android:layout_height="40dp"
            android:background="@color/color_F2F2F2"/>
        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:layout_weight="1"
            android:text="10月02日 7：00"
            android:textSize="14sp"
            android:textColor="@color/color_333333"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_F8F8F8"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="17dp"
        android:paddingBottom="15dp">
        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入日程地点"
            android:textSize="14sp"
            android:background="@color/transparent"
            android:drawableLeft="@mipmap/icon_meeting_address"
            android:drawablePadding="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_F8F8F8"/>
    <LinearLayout
        android:id="@+id/ll_meeting_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="16.5dp"
        android:paddingBottom="16.5dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="邀请参与人"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:background="@color/transparent"
            android:drawableLeft="@mipmap/icon_meeting_people"
            android:drawablePadding="10dp"/>
        <ImageView
            android:layout_width="7dp"
            android:layout_height="12.5dp"
            android:src="@mipmap/icon_address_book_create_right"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_F8F8F8"/>
    <LinearLayout
        android:id="@+id/ll_meeting_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="16.5dp"
        android:paddingBottom="16.5dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="会议类型"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:background="@color/transparent"
            android:drawableLeft="@mipmap/icon_meeting_type"
            android:drawablePadding="10dp"/>
        <ImageView
            android:layout_width="7dp"
            android:layout_height="12.5dp"
            android:src="@mipmap/icon_address_book_create_right"/>
    </LinearLayout>
</LinearLayout>