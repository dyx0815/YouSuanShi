<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.login.activity.SetPasswordActivity">
    <LinearLayout
        android:id="@+id/ll_asp_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <include layout="@layout/top_register_title"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_asp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:text="请设置密码"
        android:textSize="17sp"
        android:textColor="@color/color_333333"
        android:layout_below="@id/ll_asp_title"/>
    <TextView
        android:id="@+id/tv_asp_pwd_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="密码"
        android:textSize="@dimen/size_12"
        android:textColor="@color/color_333333"
        android:layout_alignLeft="@id/tv_asp_title"
        android:layout_below="@id/tv_asp_title"/>
    <LinearLayout
        android:id="@+id/ll_asp_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/tv_asp_pwd_title"
        android:layout_alignLeft="@id/tv_asp_pwd_title">
        <EditText
            android:id="@+id/et_asp_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="@color/color_333333"
            android:hint="请设置密码"
            android:background="@color/transparent"
            android:inputType="textPassword"
            android:maxLength="18"
            android:textCursorDrawable="@drawable/shape_edit_text_cursor"/>
        <ImageView
            android:id="@+id/iv_asp_clear"
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_clear"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/iv_asp_look"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/icon_look"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/iv_asp_un_look"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/icon_unlook"
            android:visibility="gone"/>
    </LinearLayout>
    <View
        android:id="@+id/v_asp_util"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_999999"
        android:layout_below="@id/ll_asp_pwd"
        android:layout_alignLeft="@id/ll_asp_pwd"
        android:layout_alignRight="@id/ll_asp_pwd"/>
    <TextView
        android:id="@+id/tv_asp_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="需6-18位字符"
        android:textSize="@dimen/size_10"
        android:textColor="@color/color_F99E05"
        android:layout_below="@id/v_asp_util"
        android:layout_alignLeft="@id/v_asp_util"/>
    <Button
        android:id="@+id/btn_asp_next"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:text="确认注册"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_alignLeft="@id/ll_asp_pwd"
        android:layout_alignRight="@id/ll_asp_pwd"
        android:layout_below="@id/tv_asp_remind"
        android:background="@drawable/selector_register_btn_bg"
        android:enabled="false"/>
</RelativeLayout>