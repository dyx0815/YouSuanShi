<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_voice_dialog"
        android:paddingTop="21dp"
        android:paddingBottom="9.5dp"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/iv_voice_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:src="@mipmap/icon_voice_dialog"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/iv_voice_level"
            android:layout_width="31dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="9dp"
            android:src="@drawable/level_list_voice"
            android:layout_alignBottom="@id/iv_voice_dialog"
            android:layout_toRightOf="@id/iv_voice_dialog"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/iv_voice_rollback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_voice_rollback"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="11dp"
            android:text="手指上滑，取消发送"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_voice_dialog"/>
    </RelativeLayout>
</RelativeLayout>