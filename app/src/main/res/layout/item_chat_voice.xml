<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="昨天12：30"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_date_time"
        android:padding="5dp"
        android:visibility="gone"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_head_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ez"
        app:riv_oval="true"
        android:layout_below="@id/tv_date_time"/>
    <ImageView
        android:id="@+id/iv_chat"
        android:layout_width="5.5dp"
        android:layout_height="10.5dp"
        android:layout_marginTop="9.5dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/icon_chat_text"
        android:layout_toRightOf="@id/riv_head_icon"
        android:layout_alignTop="@id/ll_chat_voice"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:id="@+id/ll_chat_voice"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:gravity="center_vertical"
        android:layout_alignTop="@id/riv_head_icon"
        android:layout_toRightOf="@id/riv_head_icon"
        android:background="@drawable/shape_chat_text_mine" >
        <ImageView
            android:id="@+id/iv_chat_voice_icon"
            android:layout_width="14dp"
            android:layout_height="19dp"
            android:src="@mipmap/icon_chat_voice"/>
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif_chat_voice"
            android:layout_width="14dp"
            android:layout_height="19dp"
            android:src="@drawable/start_voice_gif"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_voice_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="2´´"
            android:textSize="13sp"
            android:textColor="@color/color_595656"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/transparent"
        android:layout_toRightOf="@id/ll_chat_voice"/>
    <View
        android:id="@+id/v_util"
        android:layout_width="12dp"
        android:layout_height="1dp"
        android:background="@color/transparent"
        android:layout_alignParentRight="true"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_head_icon_mine"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ez"
        app:riv_oval="true"
        android:layout_below="@id/tv_date_time"
        android:layout_toLeftOf="@id/v_util"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_chat_mine"
        android:layout_width="5.5dp"
        android:layout_height="10.5dp"
        android:layout_marginTop="9.5dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/riv_head_icon_mine"
        android:layout_alignTop="@id/ll_chat_voice_mine"
        android:src="@mipmap/icon_chat_text_mine"
        android:scaleType="fitXY"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_send_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@mipmap/icon_send_error"
        android:layout_toLeftOf="@id/ll_chat_voice_mine"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/ll_chat_voice_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:background="@drawable/shape_chat_text"
        android:gravity="center_vertical|right"
        android:layout_alignTop="@id/riv_head_icon_mine"
        android:layout_toLeftOf="@id/riv_head_icon_mine"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_voice_long_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="2´´"
            android:textSize="13sp"
            android:textColor="@color/white"/>
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif_chat_voice_mine"
            android:layout_width="14dp"
            android:layout_height="19dp"
            android:src="@drawable/start_voice_gif_mine"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/iv_chat_voice_mine_icon"
            android:layout_width="14dp"
            android:layout_height="19dp"
            android:src="@mipmap/icon_chat_voice_mine"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_read_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:text="未读"
        android:textSize="11sp"
        android:textColor="@color/color_F99E05"
        android:background="@color/transparent"
        android:layout_toLeftOf="@id/riv_head_icon_mine"
        android:layout_below="@id/ll_chat_voice_mine"
        android:visibility="gone"/>
</RelativeLayout>