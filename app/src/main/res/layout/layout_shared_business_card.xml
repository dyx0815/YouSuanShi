<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.chat.activity.SharedBusinessCardActivity"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_title"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_search"
            android:gravity="center"
            android:paddingTop="11.5dp"
            android:paddingBottom="11.5dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/icon_serach_title" />

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.5dp"
                android:text="搜索"
                android:textColor="@color/color_999999"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_my_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_search"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/icon_shared_business_card_my_friend"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9.5dp"
                android:text="我的好友"
                android:textSize="16sp"
                android:textColor="@color/color_333333"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="65.6dp"
            android:background="@color/color_F2F2F2"/>
        <LinearLayout
            android:id="@+id/ll_team_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_search"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:visibility="gone">
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/icon_team_people"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9.5dp"
                android:text="公司成员"
                android:textSize="16sp"
                android:textColor="@color/color_333333"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="65.6dp"
            android:background="@color/color_F2F2F2"/>
        <LinearLayout
            android:id="@+id/ll_face_create_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_search"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:visibility="gone">
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/icon_face_create_group"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9.5dp"
                android:text="面对面建群"
                android:textSize="16sp"
                android:textColor="@color/color_333333"/>
        </LinearLayout>
        <View
            android:id="@+id/v_util"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/color_F8F8F8"
            android:layout_below="@id/ll_my_friend"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_util"/>
        <LinearLayout
            android:id="@+id/ll_often_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="12dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/icon_often_people"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9.5dp"
                android:text="常用联系人"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:src="@mipmap/icon_team_flag"
                android:scaleType="fitStart"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_address_book_create_right"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_often"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>