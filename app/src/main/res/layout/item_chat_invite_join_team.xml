<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="昨天12：30"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_date_time"
        android:padding="5dp"
        android:visibility="gone"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_head_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ez"
        app:riv_oval="true"
        android:layout_below="@id/tv_date_time"/>
    <ImageView
        android:id="@+id/iv_text_chat"
        android:layout_width="5.5dp"
        android:layout_height="10.5dp"
        android:layout_marginTop="9.5dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/icon_chat_text"
        android:layout_toRightOf="@id/riv_head_icon"
        android:layout_alignTop="@id/ll_invite"
        android:scaleType="fitXY"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/ll_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:padding="12dp"
        android:background="@drawable/shape_chat_text_mine"
        android:layout_alignTop="@id/riv_head_icon"
        android:layout_toRightOf="@id/riv_head_icon">
        <TextView
            android:id="@+id/tv_invite_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清风邀请你加入陕西东舟 软件科技有限责任开发公风邀请你加入陕西东舟 软件科技有限责任开发风邀请你加入陕西东舟 软件科技有限责任开发风邀请你加入陕西东舟 软件科技有限责任开发"
            android:textSize="12sp"
            android:textColor="@color/color_333333"
            android:maxEms="11"
            android:maxLines="3"
            android:ellipsize="end"/>
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ez"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/transparent"
        android:layout_toRightOf="@id/ll_invite"/>

    <View
        android:id="@+id/v_util"
        android:layout_width="12dp"
        android:layout_height="1dp"
        android:background="@color/transparent"
        android:layout_alignParentRight="true"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_head_icon_mine"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ez"
        app:riv_oval="true"
        android:layout_below="@id/tv_date_time"
        android:layout_toLeftOf="@id/v_util"
        android:visibility="visible"/>
    <ImageView
        android:id="@+id/iv_send_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@mipmap/icon_send_error"
        android:layout_toLeftOf="@id/ll_invite_mine"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/ll_invite_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:padding="12dp"
        android:background="@drawable/shape_chat_text_mine"
        android:layout_alignTop="@id/riv_head_icon_mine"
        android:layout_toLeftOf="@id/riv_head_icon_mine">
        <TextView
            android:id="@+id/tv_invite_message_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清风邀请你加入陕西东舟 软件科技有限责任开发公风邀请你加入陕西东舟 软件科技有限责任开发风邀请你加入陕西东舟 软件科技有限责任开发风邀请你加入陕西东舟 软件科技有限责任开发"
            android:textSize="12sp"
            android:textColor="@color/color_333333"
            android:maxEms="11"
            android:maxLines="3"
            android:ellipsize="end"/>
        <ImageView
            android:id="@+id/iv_logo_mine"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ez"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_read_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:text="未读"
        android:textSize="11sp"
        android:textColor="@color/color_F99E05"
        android:background="@color/transparent"
        android:layout_toLeftOf="@id/riv_head_icon_mine"
        android:layout_below="@id/ll_invite_mine"
        android:visibility="gone"/>
</RelativeLayout>