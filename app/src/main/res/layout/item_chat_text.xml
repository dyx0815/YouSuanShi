<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="昨天12：30"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_date_time"
        android:padding="5dp"
        android:visibility="gone"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_head_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ez"
        app:riv_oval="true"
        android:layout_below="@id/tv_date_time"/>
    <ImageView
        android:id="@+id/iv_text_chat"
        android:layout_width="5.5dp"
        android:layout_height="10.5dp"
        android:layout_marginTop="9.5dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/icon_chat_text"
        android:layout_toRightOf="@id/riv_head_icon"
        android:layout_alignTop="@id/tv_chat_text"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_chat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:paddingLeft="12.5dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="12.5dp"
        android:text="这款软件真的不错啊啊啊啊！"
        android:textSize="14sp"
        android:textColor="@color/color_333333"
        android:background="@drawable/shape_chat_text_mine"
        android:gravity="center_vertical"
        android:layout_alignTop="@id/riv_head_icon"
        android:layout_toRightOf="@id/riv_head_icon"
        android:maxEms="13"
        android:autoLink="phone|web"
        android:textIsSelectable="true"
        android:textSelectHandleLeft="@mipmap/icon_text_selected_left"
        android:textSelectHandleRight="@mipmap/icon_text_selected_right"
        android:textColorHighlight="@color/color_fef5e6"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/transparent"
        android:layout_toRightOf="@id/tv_chat_text"/>

    <View
        android:id="@+id/v_util"
        android:layout_width="12dp"
        android:layout_height="1dp"
        android:background="@color/transparent"
        android:layout_alignParentRight="true"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_head_icon_mine"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ez"
        app:riv_oval="true"
        android:layout_below="@id/tv_date_time"
        android:layout_toLeftOf="@id/v_util"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_chat_text_mine"
        android:layout_width="5.5dp"
        android:layout_height="10.5dp"
        android:layout_marginTop="9.5dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/riv_head_icon_mine"
        android:layout_alignTop="@id/tv_chat_text_mine"
        android:src="@mipmap/icon_chat_text_mine"
        android:scaleType="fitXY"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_send_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@mipmap/icon_send_error"
        android:layout_toLeftOf="@id/tv_chat_text_mine"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_chat_text_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="12.5dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="12.5dp"
        android:text="这款软件真的不错啊啊啊啊！"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_chat_text"
        android:gravity="center_vertical"
        android:layout_alignTop="@id/riv_head_icon_mine"
        android:layout_toLeftOf="@id/riv_head_icon_mine"
        android:maxEms="13"
        android:visibility="visible"
        android:autoLink="phone|web"
        android:textIsSelectable="true"
        android:textSelectHandleLeft="@mipmap/icon_text_selected_left_mine"
        android:textSelectHandleRight="@mipmap/icon_text_selected_right_mine"
        android:textColorHighlight="@color/color_fb9103"/>
    <TextView
        android:id="@+id/tv_read_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:text="未读"
        android:textSize="11sp"
        android:textColor="@color/color_F99E05"
        android:background="@color/transparent"
        android:layout_toLeftOf="@id/riv_head_icon_mine"
        android:layout_below="@id/tv_chat_text_mine"
        android:visibility="gone"/>
</RelativeLayout>