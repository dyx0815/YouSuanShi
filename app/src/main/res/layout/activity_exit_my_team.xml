<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.mine.activity.ExitMyTeamActivity"
    android:background="@color/color_F8F8F8">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="14dp"
            android:paddingRight="12dp"
            android:paddingBottom="14dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的企业/组织/团队"
            android:textColor="@color/color_333333"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/ll_back"
            android:background="@color/color_D5D5D5" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="11dp"
        android:background="@color/white"
        android:layout_below="@id/rl_title">
        <ImageView
            android:id="@+id/iv_team_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="16.5dp"
            android:src="@mipmap/icon_address_book_my_team"/>
        <TextView
            android:id="@+id/tv_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陕西东舟软件技术开发有限责任"
            android:textSize="15sp"
            android:textColor="@color/color_333333"
            android:maxEms="12"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_toRightOf="@id/iv_team_icon"
            android:layout_marginLeft="14dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.5dp"
            android:layout_alignLeft="@id/tv_team_name"
            android:layout_below="@id/tv_team_name"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_team_proof"
                android:layout_width="50.5dp"
                android:layout_height="18dp"
                android:layout_marginRight="25dp"
                android:src="@mipmap/icon_team_proof"
                android:layout_alignLeft="@id/tv_team_name"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_first_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5.5dp"
                android:paddingRight="5.5dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="主管理员：清风"
                android:textSize="11sp"
                android:textColor="@color/color_F99E05" />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_exit_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="18.5dp"
        android:paddingBottom="18.5dp"
        android:text="退出企业"
        android:textSize="14sp"
        android:textColor="@color/color_333333"
        android:gravity="center"
        android:background="@color/white"
        android:layout_below="@id/rl_team"/>
</RelativeLayout>