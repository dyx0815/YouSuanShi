<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/cb_choose"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/selector_choose_my_friend"
        android:button="@null"
        android:checked="false"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_team_structure_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.5dp"
        android:layout_marginTop="15.5dp"
        android:text="董事会"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        android:layout_toRightOf="@id/cb_choose"/>

    <TextView
        android:id="@+id/tv_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@mipmap/icon_subordinate"
        android:drawablePadding="5dp"
        android:padding="12dp"
        android:text="下级"
        android:textColor="@color/color_F99E05"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_team_structure_name"
        android:layout_alignLeft="@id/tv_team_structure_name"
        android:layout_marginTop="15.5dp"
        android:background="@color/color_F2F2F2" />
</RelativeLayout>