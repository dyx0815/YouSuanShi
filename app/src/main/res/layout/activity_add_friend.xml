<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F3F4F6"
    tools:context=".module.addressbook.activity.AddFriendActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="14dp"
            android:paddingRight="12dp"
            android:paddingBottom="14dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加"
            android:textColor="@color/color_333333"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_create_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_below="@id/rl_title"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_create_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_add_friend_create_team"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_create_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10.5dp"
            android:text="创建团队"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            android:layout_toRightOf="@id/iv_create_team"/>
        <TextView
            android:id="@+id/tv_create_team_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="开启便捷办公应用"
            android:textSize="11sp"
            android:textColor="@color/color_999999"
            android:layout_alignLeft="@id/tv_create_team"
            android:layout_below="@id/tv_create_team"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_address_book_create_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="11.5dp"
            android:background="@color/color_F2F2F2"
            android:layout_below="@id/tv_create_team_info"
            android:layout_alignLeft="@id/tv_create_team_info"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_join_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_below="@id/rl_create_team"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_join_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_add_friend_join_team"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_join_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10.5dp"
            android:text="加入企业/组织/团队"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            android:layout_toRightOf="@id/iv_join_team"/>
        <TextView
            android:id="@+id/tv_join_team_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="与成员进行高效协作"
            android:textSize="11sp"
            android:textColor="@color/color_999999"
            android:layout_alignLeft="@id/tv_join_team"
            android:layout_below="@id/tv_join_team"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_address_book_create_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="11.5dp"
            android:background="@color/color_F2F2F2"
            android:layout_below="@id/tv_join_team_info"
            android:layout_alignLeft="@id/tv_join_team_info"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_add_friend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="12dp"
        android:text="添加好友"
        android:textSize="13sp"
        android:textColor="@color/color_999999"
        android:layout_below="@id/rl_join_team"/>

    <RelativeLayout
        android:id="@+id/rl_add_friend_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="11dp"
        android:layout_below="@id/tv_add_friend_title"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_add_friend_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_add_friend_by_phone"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_add_friend_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10.5dp"
            android:text="手机号"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            android:layout_toRightOf="@id/iv_add_friend_phone"/>
        <TextView
            android:id="@+id/tv_add_friend_phone_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="搜索手机号添加好友"
            android:textSize="11sp"
            android:textColor="@color/color_999999"
            android:layout_alignLeft="@id/tv_add_friend_phone"
            android:layout_below="@id/tv_add_friend_phone"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_address_book_create_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="11.5dp"
            android:background="@color/color_F2F2F2"
            android:layout_below="@id/tv_add_friend_phone_info"
            android:layout_alignLeft="@id/tv_add_friend_phone_info"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_add_friend_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_below="@id/rl_add_friend_phone"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_add_friend_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_add_friend_by_scan"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_add_friend_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10.5dp"
            android:text="扫一扫加好友"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            android:layout_toRightOf="@id/iv_add_friend_scan"/>
        <TextView
            android:id="@+id/tv_add_friend_scan_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="扫描二维码名片"
            android:textSize="11sp"
            android:textColor="@color/color_999999"
            android:layout_alignLeft="@id/tv_add_friend_scan"
            android:layout_below="@id/tv_add_friend_scan"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_address_book_create_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="11.5dp"
            android:background="@color/color_F2F2F2"
            android:layout_below="@id/tv_add_friend_scan_info"
            android:layout_alignLeft="@id/tv_add_friend_scan_info"/>
    </RelativeLayout>
</LinearLayout>