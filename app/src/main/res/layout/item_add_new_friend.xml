<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_head_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ez"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/riv_head_icon"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/riv_head_icon"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="探险家 伊泽瑞尔"
        android:textColor="@color/color_333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_name"
        android:layout_alignBottom="@id/riv_head_icon"
        android:layout_marginRight="90dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="探险家 伊泽瑞尔探险家 伊泽瑞尔探险家 伊泽瑞尔探险家 伊泽瑞尔探险家 伊泽瑞尔探险家 伊泽瑞尔探险家 伊泽瑞尔探险家 伊泽瑞尔探险家 伊泽瑞尔"
        android:textColor="@color/color_999999"
        android:textSize="11sp" />
    <TextView
        android:id="@+id/tv_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4.5dp"
        android:paddingBottom="4.5dp"
        android:text="同意"
        android:textSize="11sp"
        android:textColor="@color/color_F99E05"
        android:background="@drawable/shape_new_friend_yes"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/tv_yes_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已同意"
        android:textSize="11sp"
        android:textColor="@color/color_999999"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>
</RelativeLayout>