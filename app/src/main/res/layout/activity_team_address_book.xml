<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.addressbook.activity.TeamAddressBookActivity"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="14dp"
            android:paddingRight="12dp"
            android:paddingBottom="14dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="企业通讯录"
            android:textColor="@color/color_333333"
            android:textSize="17sp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/ll_back"
            android:background="@color/color_D5D5D5" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_F8F8F8"/>
    <RelativeLayout
        android:id="@+id/rl_department_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="9dp"
        android:paddingRight="12dp">
        <ImageView
            android:id="@+id/iv_department_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_department_manager"/>
        <TextView
            android:id="@+id/tv_department_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="部门管理"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:layout_toRightOf="@id/iv_department_manager"/>
        <TextView
            android:id="@+id/tv_util1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="添加/管理部门、子部门"
            android:textSize="11sp"
            android:textColor="@color/color_999999"
            android:layout_below="@id/tv_department_manager"
            android:layout_alignLeft="@id/tv_department_manager"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_address_book_create_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_people_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="9dp"
        android:paddingRight="12dp">
        <ImageView
            android:id="@+id/iv_people_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_people_manager"/>
        <TextView
            android:id="@+id/tv_people_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="成员管理"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:layout_toRightOf="@id/iv_people_manager"/>
        <TextView
            android:id="@+id/tv_util2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="添加/管理成员"
            android:textSize="11sp"
            android:textColor="@color/color_999999"
            android:layout_below="@id/tv_people_manager"
            android:layout_alignLeft="@id/tv_people_manager"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_address_book_create_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_application_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="9dp"
        android:paddingRight="12dp">
        <ImageView
            android:id="@+id/iv_application_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_application_setting"/>
        <TextView
            android:id="@+id/tv_application_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="申请设置"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:layout_toRightOf="@id/iv_application_setting"/>
        <TextView
            android:id="@+id/tv_util3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="新成员加入申请、加入方式"
            android:textSize="11sp"
            android:textColor="@color/color_999999"
            android:layout_below="@id/tv_application_setting"
            android:layout_alignLeft="@id/tv_application_setting"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_address_book_create_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>