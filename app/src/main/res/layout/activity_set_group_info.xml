<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.chat.activity.SetGroupInfoActivity"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="14dp"
            android:paddingRight="12dp"
            android:paddingBottom="14dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发起群聊"
            android:textColor="@color/color_333333"
            android:textSize="17sp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_D5D5D5"
            android:layout_below="@id/ll_back"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="14.5dp"
        android:paddingRight="14.5dp"
        android:gravity="center_vertical">
        <RelativeLayout
            android:id="@+id/rl_head_icon"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_head_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_group_head"
                android:scaleType="fitXY"
                app:riv_oval="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_update_group_head_icon"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.5dp"
            android:text="群名称："
            android:textSize="15sp"
            android:textColor="@color/color_333333"/>
        <EditText
            android:id="@+id/et_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入群昵称"
            android:background="@color/transparent"
            android:textSize="15sp"
            android:textColor="@color/color_333333"
            android:maxLines="1"
            android:textCursorDrawable="@drawable/shape_edit_text_cursor"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_F8F8F8"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="11.5dp"
        android:paddingBottom="12dp"
        android:paddingRight="12dp"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="群成员"
                android:textSize="14sp"
                android:textColor="@color/color_333333"/>
            <TextView
                android:id="@+id/tv_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3人"
                android:textSize="10sp"
                android:textColor="@color/color_CBCBCB"
                android:gravity="right"/>
            <ImageView
                android:layout_width="5dp"
                android:layout_height="9dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/icon_address_book_create_right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/iv_add_people"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/icon_group_people_add"
                android:layout_toRightOf="@id/recyclerView"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_remove_people"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/icon_group_people_remove"
                android:layout_toRightOf="@id/iv_add_people"
                android:layout_centerVertical="true"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_F8F8F8" />
    <LinearLayout
        android:id="@+id/ll_group_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="18.5dp"
        android:paddingBottom="18.5dp"
        android:gravity="center_vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="群类型"
            android:textSize="14sp"
            android:textColor="@color/color_333333"/>
        <TextView
            android:id="@+id/tv_group_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通群"
            android:textSize="12sp"
            android:textColor="@color/color_333333"/>
        <ImageView
            android:layout_width="6dp"
            android:layout_height="10.5dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/icon_jiantou"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:gravity="bottom">
        <TextView
            android:id="@+id/tv_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15.5dp"
            android:paddingBottom="16dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="11.5dp"
            android:text="完成创建"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/shape_create_group_btn_bg"/>
    </LinearLayout>
</LinearLayout>