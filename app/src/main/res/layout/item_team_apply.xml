<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="9.5dp"
        android:paddingRight="7.5dp"
        android:background="@mipmap/icon_team_apply_bg">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_head_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ez"
            app:riv_oval="true"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_real_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:text="清风软件设计"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:layout_toRightOf="@id/riv_head_icon"
            android:layout_alignTop="@id/riv_head_icon"/>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="41dp"
            android:text="2010-08-08 12:12"
            android:textSize="10sp"
            android:textColor="@color/color_999999"
            android:layout_alignTop="@id/tv_real_name"
            android:layout_toRightOf="@id/tv_real_name"/>
        <TextView
            android:id="@+id/tv_apply_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.5dp"
            android:text="申请理由"
            android:textSize="10sp"
            android:textColor="@color/color_999999"
            android:layout_alignLeft="@id/tv_real_name"
            android:layout_below="@id/tv_real_name"/>
        <TextView
            android:id="@+id/tv_apply_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="我想加入你的企业我想加入你的企业我想加入你的企业我想加入你的企业我想加入你的企业我想加入你的企业我想加入你的企业我想加入你的企业"
            android:textSize="12sp"
            android:textColor="@color/color_333333"
            android:layout_alignLeft="@id/tv_apply_text_title"
            android:layout_below="@id/tv_apply_text_title"
            android:maxEms="15"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tv_phone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.5dp"
            android:text="手机号"
            android:textSize="10sp"
            android:textColor="@color/color_999999"
            android:layout_alignLeft="@id/tv_real_name"
            android:layout_below="@id/tv_apply_text"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7.5dp"
            android:text="13218895895"
            android:textSize="12sp"
            android:textColor="@color/color_333333"
            android:layout_alignLeft="@id/tv_apply_text_title"
            android:layout_below="@id/tv_phone_title"/>

        <TextView
            android:id="@+id/tv_leave_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="留言"
            android:textSize="10sp"
            android:textColor="@color/color_999999"
            android:layout_alignLeft="@id/tv_real_name"
            android:layout_below="@id/tv_phone"/>

        <TextView
            android:id="@+id/tv_leave_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="我觉得你们公司很适合我，所以想申请加 入你们的组织架构，请同意我的我想加入你的企业我想加入你的企业申请"
            android:textSize="12sp"
            android:textColor="@color/color_333333"
            android:layout_alignLeft="@id/tv_apply_text_title"
            android:layout_below="@id/tv_leave_message_title"
            android:maxEms="16"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="13.5dp"
            android:paddingRight="14dp"
            android:paddingTop="7dp"
            android:paddingBottom="6.5dp"
            android:text="同意"
            android:textSize="12sp"
            android:textColor="@color/color_F99E05"
            android:background="@drawable/shape_team_apply_btn_bg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_approved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清风已同意"
            android:textSize="12sp"
            android:textColor="@color/color_999999"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:maxEms="3"
            android:gravity="center"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>