<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_address_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/iv_address_book"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_my_friend_address_book" />

        <TextView
            android:id="@+id/tv_address_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13.5dp"
            android:layout_toRightOf="@id/iv_address_book"
            android:text="手机通讯录"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/iv_address_book"
            android:layout_alignLeft="@id/tv_address_book"
            android:layout_marginTop="9.5dp"
            android:background="@color/color_F2F2F2" />
    </RelativeLayout>
</LinearLayout>