<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_file_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/icon_doc_docx" />

    <TextView
        android:id="@+id/tv_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_file_type"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_file_type"
        android:ellipsize="end"
        android:maxEms="17"
        android:maxLines="1"
        android:text="公司简介文档处.docx"
        android:textColor="@color/color_333333"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_file_type"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_file_type"
        android:text="100KB"
        android:textColor="@color/color_999999"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_file_type"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tv_size"
        android:text="昨天"
        android:textColor="@color/color_999999"
        android:textSize="10sp" />

    <LinearLayout
        android:id="@+id/ll_cb_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="12dp">
        <CheckBox
            android:id="@+id/cb_choose"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/selector_choose_file"
            android:button="@color/transparent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_size"
        android:layout_marginTop="9.5dp"
        android:background="@color/color_F2F2F2" />
</RelativeLayout>