<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="17dp"
        android:layout_height="22dp"
        android:layout_marginLeft="7dp"
        android:src="@mipmap/icon_item_team_structure"/>
    <TextView
        android:id="@+id/tv_team_structure_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.5dp"
        android:layout_marginTop="15.5dp"
        android:text="董事会"
        android:textSize="14sp"
        android:textColor="@color/color_333333"
        android:layout_toRightOf="@id/iv_bg"/>
    <TextView
        android:id="@+id/tv_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="部门群"
        android:textSize="12sp"
        android:textColor="@color/color_333333"
        android:drawableLeft="@mipmap/icon_item_team_structure_group"
        android:drawablePadding="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15.5dp"
        android:background="@color/color_F2F2F2"
        android:layout_below="@id/tv_team_structure_name"
        android:layout_alignLeft="@id/tv_team_structure_name"/>
</RelativeLayout>